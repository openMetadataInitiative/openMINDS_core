{
  "_type": "core:Subject",
  "_extends": "research/specimen.schema.tpl.json",
  "required": [
    "studiedState"
  ],
  "properties": {
    "isPartOf": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "_instruction": "Add all subject groups of which this subject is a member.",
      "_linkedTypes": [
        "core:SubjectGroup"
      ]
    },
    "studiedState": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "_instruction": "Add all states in which this subject was studied.",
      "_linkedTypes": [
        "core:SubjectState"
      ]
    }
  }
}
